{
  "extends": "./tsconfig.json", // Inherit base settings
  "compilerOptions": {
    "noEmit": false, // Allow emitting JS files
    "outDir": "./dist-server", // Specify output directory for server JS files
    "module": "ESNext", // Changed from NodeNext to ESNext for ESM
    "moduleResolution": "bundler", // Changed from NodeNext to bundler for ESM
    // Remove frontend-specific options if necessary (like "jsx": "preserve", "types": ["vite/client"])
    // Keep "baseUrl" and "paths" if needed for server-side imports
    // Remove "allowImportingTsExtensions" as it's invalid when noEmit is false
    "allowImportingTsExtensions": false, // Explicitly override inherited value
    "jsx": "react-jsx", // Adjust if server uses JSX differently or not at all
    "types": ["node"], // Use Node types for server
    "baseUrl": ".", // Explicitly set baseUrl
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["server/**/*", "shared/**/*"], // Only include server and shared code
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "client/**/*"] // Exclude client code
}